<view class="loginBox">
  <view class="login-icon">
    <image class="login-image" src="../../resources/pic/loginHead.jpg"></image>
  </view>
  <view class="login-form">
    <view class="inputView">
      <image src="../../resources/pic/login_user.png"></image>
      <label class="loginLabel">帐号：</label>
      <input class="inputText" placeholder="请输入手机号" bindinput="phoneInput" selection-start="-1" selection-end="-1" cursor="-1"></input>
    </view>
    <view class="line"></view>
    <view class="inputView">
      <image src="../../resources/pic/login_pass.png"></image>
      <label class="loginLabel">密码：</label>
      <input class="inputText" password='true' placeholder="请输入密码" bindinput="passInput" selection-start="-1" selection-end="-1" cursor="-1"></input>
    </view>
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{size}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login" open-type='getUserInfo'>登录</button>
      <button class="loginBtn" type="primary" size="{{size}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="register">注册</button>
    </view>
  </view>
</view>