/* pages/community/pages/information/information.wxss */
.workmate-box{
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}
.workmate-list{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  padding: 20rpx 25rpx;
  background-color: #ecebeb;
  margin-bottom: 20rpx;
}
.workmate-list:nth-last-child(1){
  margin-bottom: 0;
}
.workmate-list-right{
  box-sizing: border-box;
  width: 750rpx;
}

/* 内容 */
.workmate-msg{
  word-wrap:break-word;
}
.workmate-msg-img{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.workmate-msg-img .workmate-msg-item{
  margin-right: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.workmate-msg-img .workmate-msg-item:nth-child(3n){
  margin-right: 0rpx;
}
.workmate-msg-item image{
  width: 180rpx;
  height: 180rpx;
}
.workmate-msg-item video{
  width: 180rpx;
  height: 180rpx;
}
.workmate-msg-item cover-image{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 777;
}
/* 时间 */
.workmate-time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  font-size: 24rpx;
  color: #666;
}


