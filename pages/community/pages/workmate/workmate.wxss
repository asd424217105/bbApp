/* pages/community/pages/workmate/workmate.wxss */
@import "/pages/common/yellow.wxss";
@import "/pages/common/red.wxss";
/* @import "/pages/common/blue.wxss"; */
.workmate-box{
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}
.workmate-list{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #999;
}
.workmate-list:nth-last-child(1){
  border-bottom: none;
}
.workmate-list-left{
  width: 100rpx;
}
.workmate-list-left image{
  width: 100rpx;
  height: 100rpx;
}
.workmate-list-right{
  box-sizing: border-box;
  width: 600rpx;
  padding-left: 20rpx;
}
.workmate-name{
  color: #05a;
  font-weight: bold;
  font-size: 30rpx;
}
/* 内容 */
.workmate-msg{
  word-wrap:break-word;
}
.file-body{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.file-body .file-body-item{
  margin-right: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.file-body .file-body-item:nth-child(3n){
  margin-right: 0rpx;
}
.file-body image{
  width: 180rpx;
  height: 180rpx;
}
.file-body video{
  width: 180rpx;
  height: 180rpx;
}
.file-body cover-image{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 777;
}
/* 时间 */
.workmate-time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  font-size: 24rpx;
  color: #777;
}
.workmate-time image{
  width: 40rpx;
  height: 35rpx;
}
/* 评论 */
.workmate-comment{
  background-color: #ecebeb;
  padding: 5rpx 10rpx 5rpx 15rpx;
  word-wrap:break-word;
  font-size: 26rpx;
}
.workmate-comment text{
  color: #05a;
}
.comment-img image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.comment-img image:nth-child(3n){
  margin-right: 0rpx;
}

/* 添加项目 */
.add-project{
  position: fixed;
  bottom: 20rpx;
  right: 2%;
  z-index: 5;
  width: 130rpx;
  text-align: center;
  font-size: 26rpx;
  color: #1c97e5;
}
.add-project image{
  width: 100rpx;
  height: 100rpx;
}


/* 评论框弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 8888;
  color: #fff;
  background-color: pink;
}
.modal-dialog {
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 55%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  border-top: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 30rpx 25rpx;
  font-size: 28rpx;
}
.modal-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
}
.modal-item input {
  width: 78%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  color: #333;
  border-radius: 10rpx;
}
.modal-item text{
  width: 17%;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: 1rpx solid #999;
}
.modal-item text.send{
  color: #fff;
  background-color: green;
  border: 1rpx solid green;
}

