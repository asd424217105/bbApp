/* pages/foreman/pages/applicationList/applicationList.wxss */
.page-section-spacing{
  padding: 0;
}

.worker-list{
  margin-top: 110rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
}
.worker-list .all{
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.worker-list .checkboxitem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #ecebeb;
  border-radius: 10rpx;
  padding: 20rpx 0 20rpx 20rpx;
  margin-bottom: 20rpx;
}
.worker-list .checkboxitem .checkbox2{
  display: flex;
  flex-direction: row;
}
.worker-list .checkboxitem .checkbox2 .headimg{
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.worker-list .checkboxitem>navigator{
  width: 88rpx;
  height: 88rpx;
}
.worker-list .checkboxitem>navigator image{
  width: 88rpx;
  height: 88rpx;
}
.worker-list .checkbox2 .checkboxitem-msg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 400rpx;
}
.worker-list .checkbox2 .checkboxitem-msg .time{
  color: #666;
}




/* 双按钮 */
.double-btn{
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #ffffff;
  position: fixed;
  top: 0;
  width: 100%;
}
.double-btn button{
  width: 48%;
  color: #fff;
  font-size: 28rpx;
  background-color: #FE3F44;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.check-box button.button-hover{
  background-color: gainsboro;
}