@import "/pages/common/lib/comCheck.wxss";

.box1{
  border-bottom: 1rpx solid #999;
  padding-top: 40rpx;
  padding-bottom:25rpx; 
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.tichu{
  color: #FE3F44;
  margin-top: 15rpx;
}
.box1 .people-box{
  width: 130rpx;
  height: 180rpx;
}

.box2{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 40rpx 20rpx;
}
.box2>image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
}
.people-box{
  width: 130rpx;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.people-box image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}

.page-section .button-hover{
  background-color: gainsboro;
}
.one-btn{
  position: fixed;
  bottom: 20rpx;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #FE3F44;
}
