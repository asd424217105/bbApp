/* pages/index/pages/workerDailyList/workerDailyList.wxss */
.page-section-spacing{
  padding: 0rpx;
}

.list-item{
  border-bottom: 1rpx solid #ccc;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 25rpx;
  padding-right: 10rpx;
}
.list-item>view{
  width: 410rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
}
.list-item image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
.list-item text{
  margin-right: 35rpx;
}

.list-item button{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #FE3F44;
  text-align: center;
  margin: 0;
  padding: 0;
  margin-left: 40rpx;
}
.list-item button.green{
  background-color: green;
}
.list-box .button-hover{
  background-color: gainsboro;
}
.one-btn{
  position: fixed;
  bottom: 20rpx;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #FE3F44;
}