.page-section-spacing{
  padding: 0;
}

.workers-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #999;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.workers-item button{
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 26rpx;
