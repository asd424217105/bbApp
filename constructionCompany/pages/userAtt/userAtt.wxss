.page-section-spacing{
  padding: 24rpx 30rpx;
}

.station{
  margin-bottom: 20rpx;
}
.station .stationName{
  text-align: center;
  color: #1c97e5;
  font-weight: bold;
}

.workers-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.workers-item button{
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #1c97e5;
  border-radius: 6rpx;
  text-align: center;
  margin: 0;
}