/* pages/ConstructionCompany/pages/arrangePeople/arrangePeople.wxss */
.page-section-spacing{
  padding: 0;
}

.find-worker-item{
  padding: 15rpx 20rpx 10rpx;
  border-bottom: 1rpx solid #999;
  font-size: 28rpx;
}
.find-worker-item>view:nth-child(1){
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 66rpx;
  margin-bottom: 12rpx;
}
.find-worker-item>view:nth-child(1) text{
  font-size: 30rpx;
  font-weight: bold;
}
.find-worker-item>view:nth-child(1) button{
  width: 155rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #1c97e5;
  border-radius: 6rpx;
  text-align: center;
  margin: 0;
}
.people-list view{
  color: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ccc;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
  border-radius: 6rpx;
}